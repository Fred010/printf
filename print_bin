#include "main.h"

/**
 *print_bin - convert int to binary
 *@roll: list of given ints
 *
 *Return: number of prints
 */

int print_bin(va_list roll)

{
	int *arr;
	int print_poll, i;
	unsigned int n, a;

	n = va_arg(roll, int);
	a = n;
	print_poll = 0;

	while (a / 2)
	{
		print_poll++;
		a /= 2;
	}

	print_poll++;

	arr = (int*) malloc(sizeof(int) *print_poll);

	if (arr == NULL)
	{
		free(arr);
		return (0);
	}

	for (i = 0; i < print_poll; i++)
	{
		arr[i] = n % 2;
		n /= 2;
	}

	for (i = print_poll - 1; i >= 0; i--)
	{
		_putchar(arr[i] + '0');
	}

	free(arr);
	return (print_poll);
}
